<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_book_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new book In"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/add_book_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new book Out"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/add_book_inout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new book InOut"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/get_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get books"
        android:textAllCaps="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view"/>
    </ScrollView>

</LinearLayout>